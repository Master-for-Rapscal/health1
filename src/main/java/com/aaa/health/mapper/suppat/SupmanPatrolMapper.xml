<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.health.mapper.suppat.SupmanPatrolMapper">
    <select id="findList" parameterType="Map" resultType="com.aaa.health.entity.suppat.SupmanPatrol">
select p.patrolId,p.areaId,a.areaName,p.patrolYear,p.patrolContent,p.patrolProblem,p.patrolTime,p.patrolName,p.patrolRemarks,p.patrolState,p.patrolColumn from supmanPatrol p join area a on p.areaId=a.areaId
where 1 = 1

        <if test="username != null">
            and username like '%${username}%'
        </if>
        <if test="roleId != null">
            and roleId = #{roleId}
        </if>
        <if test="sex != null">
            and sex = #{sex}
        </if>
        <if test="offset != null and pageSize != null">
            limit #{offset},#{pageSize}
        </if>
    </select>

    <insert id="add" parameterType="com.aaa.health.entity.suppat.SupmanPatrol">
    insert into supmanPatrol(areaId,patrolYear,patrolContent,patrolProblem,patrolTime,patrolName,patrolRemarks)
    values(#{areaId},#{patrolYear},#{patrolContent},#{patrolProblem},#{patrolTime},#{patrolName},#{patrolRemarks})
</insert>

    <update id="update" parameterType="com.aaa.health.entity.suppat.SupmanPatrol">
update supmanPatrol set areaId=#{areaId},patrolYear=#{patrolYear},patrolContent=#{patrolContent},patrolProblem=#{patrolProblem},patrolTime=#{patrolTime},patrolName=#{patrolName},patrolRemarks=#{patrolRemarks} where patrolId=#{patrolId}
    </update>

    <delete id="delete" parameterType="String">
        delete from supmanPatrol where patrolId in(${value})
    </delete>


    <!-- 获取符合结果的总记录数 -->
    <select id="getTotal" parameterType="Map" resultType="Integer">
        select count(*) from supmanPatrol where 1 = 1
        <if test="username != null">
            and username like '%${username}%'
        </if>
        <if test="roleId != null">
            and roleId = #{roleId}
        </if>
        <if test="sex != null">
            and sex = #{sex}
        </if>
    </select>
</mapper>