recordName,recordUnit,
recordAdress,recordPostalcode,
recordPlaceadress,recordData,
recordResident,recordBookbuilding,
userIdnumber,userMyphone)
VALUES(
#{recordName},#{recordUnit},
#{recordAdress},#{recordPostalcode},
