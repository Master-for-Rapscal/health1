    <select id="queryCheck" resultType="Healthcheck" parameterType="Map">
        SELECT hc.* from userinfo u join healthcheck hc on u.userId=hc.userinfoid
        where u.recordName=#{recordName} and u.userIdnumber=#{userIdnumber}
    </select>

    <insert id="addUserNPI" parameterType="Map">
