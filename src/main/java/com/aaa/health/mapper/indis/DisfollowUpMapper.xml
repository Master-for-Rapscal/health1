<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.health.mapper.indis.DisfollowUpMapper">
    <delete id="delete" parameterType="String">
        delete from disfollowUp where disfopId in(${value})
    </delete>

    <insert id="add" parameterType="com.aaa.health.entity.indis.DisfollowUp">
 insert into disfollowUp(infdisId,disfopTime,disfopMode,disfopQuarantine,disfopSymptom,firstVisit,
attackCate,disfopSituation,disfopRemarks,disfopDisinfect,disfopMedicine,disfopRecovery,nextfoTime,disfopDoctor)
    values(#{infdisId},#{disfopTime},#{disfopMode},#{disfopQuarantine},#{disfopSymptom},#{firstVisit},#{attackCate},#{disfopSituation},#{disfopRemarks},#{disfopDisinfect},#{disfopMedicine},#{disfopRecovery},#{nextfoTime},#{disfopDoctor})
    </insert>
    <select id="findById" parameterType="Integer" resultType="com.aaa.health.entity.indis.DisfollowUp">
select d.*,s.lastname,u.userId,u.recordName,u.userSex,u.userBirthday,u.userGam,u.userCareer,u.userMyphone,u.recordAdress
from  disfollowUp d join infdisease i on d.infdisId=i.infdisId join userinfo u on i.userId=u.userId
join user s on d.disfopDoctor=s.id where disfopId=#{disfopId}
    </select>
    <update id="update" parameterType="com.aaa.health.entity.indis.DisfollowUp">
update disfollowUp set disfopTime=#{disfopTime},disfopMode=#{disfopMode},disfopQuarantine=#{disfopQuarantine},
disfopSymptom=#{disfopSymptom},firstVisit=#{firstVisit},attackCate=#{attackCate},disfopSituation=#{disfopSituation},
disfopRemarks=#{disfopRemarks},disfopDisinfect=#{disfopDisinfect},disfopMedicine=#{disfopMedicine},disfopRecovery=#{disfopRecovery},
nextfoTime=#{nextfoTime},disfopDoctor=#{disfopDoctor}
    where disfopId=#{disfopId}
    </update>

    <select id="findId" parameterType="Map" resultType="com.aaa.health.entity.indis.DisfollowUp">
        select * from disfollowUp d join user u on d.disfopDoctor=u.id where infdisId=#{infdisId}
    </select>
    <select id="findUserId" parameterType="Integer" resultType="com.aaa.health.entity.indis.DisfollowUp">
select i.userId,u.recordName,u.userSex,u.userBirthday,u.userGam,u.userCareer,u.userMyphone,u.recordAdress from infdisease i join userinfo u on i.userId=u.userId where infdisId=#{infdisId}
    </select>

    <select id="getTotal" parameterType="Integer" resultType="Integer">
select count(*) from disfollowUp where infdisId=#{infdisId}
    </select>

</mapper>