select u.userId,u.recordName,u.userIdnumber,u.userSex,u.userMyphone,FLOOR((TO_DAYS(SYSDATE())-TO_DAYS(u.userBirthday))/365) userAge,u.userBirthday,u.recordAdress from userinfo u
    </select>-->
</mapper>